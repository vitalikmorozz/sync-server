{
  "name": "sync-server",
  "version": "0.1.0",
  "description": "Real-time file synchronization server for Obsidian and other clients",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "dev": "cross-env NODE_ENV=development nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "db:up": "docker-compose -f docker-compose.dev.yml up -d",
    "db:down": "docker-compose -f docker-compose.dev.yml down",
    "db:stop": "docker-compose -f docker-compose.dev.yml stop",
    "db:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "db:generate": "dotenv -e .env -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.18.0",
    "socket.io": "4.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@types/pg": "^8.16.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "fastify-tsconfig": "^3.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
